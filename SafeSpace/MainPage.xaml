<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeSpace.MainPage">


        <VerticalStackLayout
            Padding="20"
            Spacing="20">

        <Label Text="Log in"></Label>
   

        <Entry Text="{Binding UserName}" Placeholder="Email"></Entry>
        <Entry Text="{Binding password}" Placeholder="Password" IsPassword="true"></Entry>
        <Button Text="Log in" FontSize="25" Command="{Binding LoginCommmand}">

        </Button>
      

    </VerticalStackLayout>
      

   
</ContentPage>
