<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeSpace.Pages.ShowChatsPage"
             Title="Chats"
             BackgroundColor="LightGray">

   
    
    <CollectionView ItemsSource="{Binding Chatrooms}"
                    SelectionMode="Single"
                    x:Name="ChatsList"
                    Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" CornerRadius="10" BorderColor="White">
                    <HorizontalStackLayout Spacing="15">
                        <Image Source="{Binding Image}" WidthRequest="50" HeightRequest="50" Aspect="AspectFill" />
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding LastMessage}" FontSize="14" TextColor="Gray" />
                            <Label Text="{Binding Chatrooms.Count}" 
       FontSize="24" 
       TextColor="Red" 
       HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
   
</ContentPage>
