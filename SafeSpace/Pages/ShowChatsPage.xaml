<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeSpace.Pages.ShowChatsPage"
             Title="Chats"
             BackgroundColor="LightGray">

   
    
    <CollectionView ItemsSource="{Binding Chatrooms}"
                    SelectionMode="Single"
                     SelectionChanged="OnChatroomSelected"
                    x:Name="ChatsList"
                    Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="20" Margin="50,50,50,50" CornerRadius="10" BorderColor="White" BackgroundColor="Green">
                    <HorizontalStackLayout Spacing="15">
                        <Image Source="chat.png" WidthRequest="40" HeightRequest="40"></Image>
                        <VerticalStackLayout>
                            
                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding LastMessage}" FontSize="14" TextColor="Gray" />
                
                            
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
   
</ContentPage>
