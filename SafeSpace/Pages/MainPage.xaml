<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeSpace.Pages.MainPage">


        <VerticalStackLayout
            Padding="20"
            Spacing="20">

        <Label Text="Welcome to SafeSpace"></Label>



        <Button Text="Log in" FontSize="25" Command="{Binding NavigateToLoginCommand}">

        </Button>

        <Button Text="Register" FontSize="25" Command="{Binding NavigateToRegisterCommand}">

        </Button>

        <Button Text="Want to keep it anonymous? Continue as a guest" FontSize="25" Command="{Binding LoginCommmand}">

        </Button>


    </VerticalStackLayout>
      

   
</ContentPage>
