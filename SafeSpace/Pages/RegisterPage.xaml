<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeSpace.Pages.RegisterPage">



    <VerticalStackLayout
            Padding="20"
            Spacing="20">
        <Label Text="Welcome to SafeSpace" HorizontalOptions="Center" Margin="0,0,0,10"></Label>
        <Label Text="Register" HorizontalOptions ="Center"></Label>


        <Entry Text="{Binding UserName}" Placeholder="Email"></Entry>
        <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="true"></Entry>
        <Label Text="{Binding Message}" TextColor="{Binding MessageColor}" FontSize="16" HorizontalOptions="Center"/>
        <Label Text="Dont have an account? Register"
       TextColor="Blue"
       HorizontalOptions="Center"
       VerticalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer
					Command="{Binding NavigateToAboutCommand}" />
            </Label.GestureRecognizers>
        </Label>
        <Button Text="Register" FontSize="25" Command="{Binding LoginCommand}">


        </Button>
        <ActivityIndicator x:Name="LoadingIndicator"
							   IsRunning="False"
							   IsVisible="False"
							   Color="Blue"
							   HorizontalOptions="Center"
							   VerticalOptions="Center"/>

    </VerticalStackLayout>



</ContentPage>